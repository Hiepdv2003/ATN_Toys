<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <title>Dashboard</title>
</head>

<body>
    <%- include('../partials/sidebar'); %>
        <section class="home-section">
            <nav>
                <div class="sidebar-button">
                    <i class='bx bx-menu sidebarBtn'></i>
                </div>
            </nav>

            <div class="home-content">
                <div class="section__body">
                    <h1>Products</h1>
                    <div class="main-content">
                        <a href="/add" class="btn add">
                            <i class="fa-solid fa-plus"></i>
                            Add new
                        </a>
                        <table class="content-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product Name</th>
                                    <th>Image</th>
                                    <th>Price</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < toys.length; i++) {%>
                                    <tr>
                                        <td data-title="ID">
                                            <%= toys[i].toyId %>
                                        </td>
                                        <td data-title="Product Name">
                                            <%= toys[i].name %>
                                        </td>
                                        <td data-title="Image" class="image">
                                            <img src="/images/<%= toys[i].image %>" width="120px" height="120px"
                                                style="border: 1px solid #999;">
                                        </td>
                                        <td data-title="Price">$<%= toys[i].price %>
                                        </td>
                                        <td data-title="Edit">
                                            <a href="/edit/<%= toys[i].toyId %>" class="btn edit">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                                Edit
                                            </a>
                                        </td>
                                        <td data-title="Delete">
                                            <a href="/delete/<%= toys[i].toyId %>" class="btn delete"
                                                onclick="confirmation(event)">
                                                <i class="fa-solid fa-trash"></i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
        <script>
            function confirmation(e) {
                e.preventDefault();
                var urlToRedirect = e.currentTarget.getAttribute('href');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = urlToRedirect;
                    }
                })
            }
        </script>

</body>

</html>